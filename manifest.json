{
    "manifest_version": 3,
    "name": "Focii Extension",
    "version": "1.0.0",
    "description": "Procrastination blocker",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "*://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "exclude_matches": ["*://*.google.com/*"],
        "js": ["contentScript.js"]
      }
    ],
    "externally_connectable": {
      "matches": ["<all_urls>"]
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/focii_logo128.png"
    }
  }